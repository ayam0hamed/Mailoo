<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slider Example</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        .carousel-item {
            height: 100vh;
            background-size: contain;
            background-position: center;
            color: #fff;
            position: relative;
            background-repeat:no-repeat;
            width:100%;
        }

        .carousel-caption {
            bottom: 40%;
        }

            .carousel-caption h1 {
                font-family: 'Playfair Display', serif;
                font-size: 64px;
                font-weight: bold;
            }

            .carousel-caption p {
                font-family: 'Montserrat', sans-serif;
                font-size: 18px;
            }

            .carousel-caption button {
                background-color: #4d7eff;
                color: white;
                padding: 10px 25px;
                border-radius: 30px;
                border: none;
                font-size: 16px;
            }

                .carousel-caption button:hover {
                    background-color: #365fbf;
                }
    </style>
</head>
<body>

 
    <!-- Bootstrap Carousel Slider -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            <!-- Slide 1 -->
            <div class="carousel-item active" style="background-image: url('@Url.Content("~/images/home1.png")');">
               @*  <div class="carousel-caption text-start">
                    <p>Men Collection 2024</p>
                    <h1>NEW ARRIVALS</h1>
                    <button>SHOP NOW</button>
                </div> *@
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item" style="background-image: url('@Url.Content("~/images/home2.png")');">
                @* <div class="carousel-caption text-start">
                    <p>Summer Collection</p>
                    <h1>HOT DEALS</h1>
                    <button>SHOP NOW</button>
                </div> *@
            </div>

        

        </div>

        <!-- Carousel controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Bootstrap JS (Popper.js and Bootstrap JS for carousel functionality) -->
   @*  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>
</body>
</html>
